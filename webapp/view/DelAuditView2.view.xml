<mvc:View
    controllerName="com.ewm.audit.parker.zewmauditcheck.controller.DelAuditView2"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>    
    <Page id="page" title="{i18n>title}" showNavButton="true" navButtonPress="onNavButtonPress" 
    navButtonTooltip="Back" >
        <content>

            <Table id="documentTable" mode="MultiSelect" selectionChange="handleSelectionChange" items="{path : 'DocumentModel>/DocumentData'}">
                <headerToolbar>                
                    <Toolbar>
                        <FlexBox
                            height="100px"
                            alignContent="Center"
                            alignItems="Center"
                            justifyContent="Center">
                            <Text text="Outbound Delivery number" class="sapUiSmallMarginEnd"></Text>
                            <Text id="deliveryNumber"></Text>
                        </FlexBox>                    
                    </Toolbar>                
                </headerToolbar>
                <columns>
                    <Column>
                       <Text text="Material Number"> </Text>
                    </Column>
                    <Column>
                       <Text text="Material Description"> </Text>
                    </Column>
                    <Column>
                       <Text text="Quantity"></Text>
                    </Column>
                  
                    <Column>
                       <Text text="Select Audit Check"></Text>
                    </Column>
                </columns>
                	<items>
			        <ColumnListItem vAlign="Middle">
				    <cells>
                    <Text text="{DocumentModel>Material}"/>
                    <Text text="{DocumentModel>Description}"/>
                    <Text text="{DocumentModel>Quantity}"/>
                  
                    <ComboBox selectedItem="{DocumentModel>Auditcheck}" change="onAuditSelected">
				<core:Item key="Pass" text="Pass" />
                <core:Item key="Fail" text="Fail" />
			</ComboBox>
                    <Text/>
                    </cells>
                    </ColumnListItem>
                    </items>

            </Table>
            
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button text="Cancel" type="Reject" press="onNavButtonPress"></Button>
                    <Button text="Save" press="onpressSave" type="Emphasized"></Button>
                </contentRight>
            </Bar>
        </footer>
    </Page>
           
</mvc:View>